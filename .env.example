# Application
DEBUG=true
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/voice_assistant

# Redis
REDIS_URL=redis://localhost:6379/0

# Object Storage (MinIO for local dev)
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=voice-assistant
S3_URL_EXPIRATION_SECONDS=3600

# OpenAI API
OPENAI_API_KEY=your-openai-api-key

# Google Cloud (path to service account JSON)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# JWT Auth
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# Normalization
NORMALIZATION_CONFIDENCE_THRESHOLD=0.7
NORMALIZATION_FUZZY_MAX_DISTANCE=2

# Retention
AUDIO_RETENTION_DAYS=90
